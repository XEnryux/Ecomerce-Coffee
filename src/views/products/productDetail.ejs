<!DOCTYPE html>
    <html>
        <%- include('./../partials/head') -%>
        <body>
          <%- include('./../partials/header') -%>

<div class="container products-wrapper">
     <div class="row">
            <div class="col-12">
                <h2 class="products-title">Detalle del producto: <%= productDetail.name %></h2>
            </div>
        </div>
        <div class="product-detail">
            <div class="row">
                <div class="col-12 col-lg-8">
                    <img src="/images/productsImage/<%= productDetail.image %>" alt="product image" class="product-detail-img">
                    <p class="product-detail-description">
                        <%= productDetail.description %>
                    </p>
                </div>
                <div class="col-12 col-lg-4">
                    <article class="product-detail-info">
                        <h2 class="product-detail-title"><%= productDetail.name %></h2>
                        <!-- <% if(productDetail.discount > 0) {
                            let finalPrice = (product.price * ((100 - product.discount) / 100)).toFixed(0)
                        %>
                            <p class="product-detail-price small">
                                <span>$<%= (product.price) %></span>
                                /
                                <b><%= product.discount %>% OFF</b>
                            </p>
                            <p class="product-detail-price">
                                $<%= (finalPrice) %>
                            </p>
                        <% } else { %> -->
                            <p class="product-detail-price">
                                $<%= (productDetail.price) %>
                            </p>
                                       
                        <% } %>
                        <ul class="actions-list">
                            <li>
                                <i class="fas fa-credit-card"></i>
                                <p>Pag√° en 12 cuotas sin interes</p>
                            </li>
                            <li>
                                <i class="fas fa-store"></i>
                                <p>Retiro gratis en locales del vendedor</p>
                            </li>
                        </ul>
                        <a href="#" class="buy-now-button">COMPRAR AHORA</a>
                        <hr>
                        <a href="/products/edit/<%= productDetail.id %>" class="action-button edit">EDITAR PRODUCTO</a>
                        
                        <form method="POST" action="/products/delete/<%= productDetail.id %>?_method=DELETE"  style="display: inline-flex">
                        <button type="submit" class="action-button delete">ELIMINAR</button>
                        </form>
                    </article>
                </div>
            </div>
        </div>
    </div>
    <!-- /product detail -->
    <!-- footer -->
    <%- include('./../partials/footer') -%>
    <!-- /footer -->
</body>
</html>