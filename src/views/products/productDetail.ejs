<!DOCTYPE html>
    <html>
        <%- include('./../partials/head') -%>
        <body>
          <%- include('./../partials/header') -%>

<div class="container products-wrapper">
     <div class="row">
            <div class="col-12">
                <h2 class="list"><%= productDetail.name %></h2>
            </div>
        </div>
        <div class="product-detail">
            <div class="row">
                <div >
                    <img src="/images/productsImage/<%= productDetail.image %>" alt="product image" class="product-detail-img" width="250px">
                    <p class="product-detail-description">
                        <%= productDetail.description %>
                    </p>
                </div>
                <div class="product-detail-info">
                    <article class="product-detail-info">
                        
                            <p class="product-detail-price">
                                $<%= (productDetail.price) %>
                            </p>
                                       
                        
                        <ul class="actions-list">
                            <li>
                                <i class="fas fa-credit-card"></i>
                                <p>Pag√° en 3 cuotas sin interes</p>
                            </li>
                            <li>
                                <i class="fas fa-store"></i>
                                <p>Retiro gratis en locales del vendedor</p>
                            </li>
                        </ul>
                        <br>
                        <a href="/cart" class="buy-now-button">COMPRAR AHORA</a>                        
                        <hr>
                        <br><a href="/products/edit/<%= productDetail.id %>"><button class="action-button delete">Editar</button></a>
                        
                        <form method="POST" action="/products/delete/<%= productDetail.id %>?_method=DELETE"  style="display: inline-flex">
                        <button type="submit" class="action-button delete">Eliminar</button>
                        </form>
                    </article>
                </div>
            </div>
        </div>
    </div>
    <!-- /product detail -->
    <!-- footer -->
    <%- include('./../partials/footer') -%>
    <!-- /footer -->
</body>
</html>