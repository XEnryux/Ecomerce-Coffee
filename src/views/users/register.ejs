<!DOCTYPE html>
<html>
<!-- head-->
<%- include('../partials/head') -%>

  <a link rel="stylesheet" href="../../public/css/register.css"></a>

  <body>
    <!-- header -->
    <%- include('../partials/header') %>

      <main class="register">
        <% if (locals && locals.errors && locals.errors.length> 0) { %>
          <% for(let i=0; i < locals.errors.length; i ++) { %>
            <p>
              <%= locals.errors[i].msg %>
            </p>
            <% } %>
              <% }%>

                <form action="/users/register" method="POST" enctype="multipart/form-data">
                  <ul>
                    <li>
                      <b><label>Nombre y apellido:</label></b>
                      <input type="text" name="name" value="<%= locals.old && old.name ? old.name : ''  %>"><br>
                    </li>
                    <li>
                      <label><b>E-mail:</b></label>
                      <input type="email" name="email" value="<%= locals.old && old.email ? old.email : '' %>"><br>
                      <br>
                    </li>
                    <li>
                      <label><b>Fecha de nacimiento</b></label>
                      <input type="date" name="birth_date" id="birth_date"
                        value="<%= locals.old && old.birth_date ? old.birth_date : '' %>" />
                      <br>
                    </li>
                    <li>
                      <label><b>Domicilio</b></label>
                      <input type="text" name="adress" placeholder="Direccion"
                        value="<%= locals.old && old.adress ? old.adress : '' %>">
                    </li>
                  </ul>
                  <br>
                  <label><B>Perfil del usuario</B></label>
                  <div class="profile">
                    <ul>
                      <li><label>Comprador</label><input type="radio" name="profile" id="buy"
                          value="buy<%= locals.old && old.category ==='buy' ? 'selected':'' %>"></li>

                      <li><label>Vendedor</label><input type="radio" name="profile" id="sell"
                          value="sell<%= locals.old && old.category === 'sell' ? 'selected':'' %>"></li>
                    </ul>
                  </div>

                  <label><B>Intereses</B></label>
                  <div class="interests">
                    <div>
                      <input type="checkbox" name="interests" value="a" id="a" />
                      <label for="a">Café Fuerte</label>
                    </div>
                    <div>
                      <input type="checkbox" name="interests" value="b" id="b" />
                      <label for="b">Café Suave</label>
                    </div>
                    <div>
                      <input type="checkbox" name="interests" value="c" id="c" />
                      <label for="c">Café Exótico</label>
                    </div>
                    <div>
                      <input type="checkbox" name="interests" value="d" id="d" />
                      <label for="d">Café de Finca</label>
                    </div>
                    <div>
                      <input type="checkbox" name="interests" value="e" id="e" />
                      <label for="e">Café Original</label>
                    </div>
                  </div>
                  <br>
                  <div class="custom-file">
                    <h4>Elegí tu foto de usuario</h4>
                    <input type="file" name="usersImage">
                  </div>
                    <br>
                  <label><b>Contraseña</b></label>
                  <input type="password" name="pass" placeholder="Elegí tu contraseña" maxlength="30"
                    pattern="[A-Za-z0-9@#$%!]{8,20}" />


                  <input type="submit" value="Registrarse" class="enviar">

                  <a href="users/login"><input type="button" value="Volver" class='borrar'></a>

                </form>
      </main>
      <!-- footer -->
      <%- include('../partials/footer') %>
  </body>

</html>